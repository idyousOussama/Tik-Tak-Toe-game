<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent"
    tools:context=".Fragments.CreateNewAccountFragment">
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

        <LinearLayout
            android:id="@+id/inputes_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:includeFontPadding="false"
                android:text="@string/sign_up_text"
                android:textColor="@color/black"
                android:textSize="55dp"
                android:layout_marginTop="50dp"

                />

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/signUp_message_text"
                android:textColor="@color/deep_gray"
                android:textSize="14sp"
                android:textStyle="bold"
                />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"

            android:layout_marginTop="85dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/first_name_text"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:textStyle="bold"

                    />
                <EditText
                    android:id="@+id/player_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/enable_player_bar_background"
                    android:fontFamily="@font/poppins"
                    android:includeFontPadding="false"
                    android:inputType="text"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/last_name_text"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:textStyle="bold"

                    />
                <EditText
                    android:id="@+id/player_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/enable_player_bar_background"
                    android:fontFamily="@font/poppins"
                    android:includeFontPadding="false"
                    android:inputType="text"
                    android:layout_marginStart="5dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_text"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false"
                android:textStyle="bold"

                />
            <EditText
                android:id="@+id/player_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@drawable/enable_player_bar_background"
                android:fontFamily="@font/poppins"
                android:includeFontPadding="false"
                android:inputType="textEmailAddress"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/password_text"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false"
                android:textStyle="bold"

                />
            <LinearLayout
                android:id="@+id/sginUp_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/enable_player_bar_background"
              android:orientation="horizontal"
               android:gravity="center_vertical"

                >

                <EditText
                    android:id="@+id/player_password"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/show_and_hide_sginUp_password"
                    android:background="@color/transparent"
                    android:fontFamily="@font/poppins"
                    android:includeFontPadding="false"
                    android:inputType="textPassword"
                    android:padding="15dp"/>
                <ImageView
                    android:id="@+id/show_and_hide_sginUp_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/open_eyes"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="15dp"

                    />


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirm_password_text"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false"
                android:textStyle="bold"

                />
            <EditText
                android:id="@+id/player_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@drawable/disable_player_inputes"
                android:fontFamily="@font/poppins"
                android:enabled="false"
                android:includeFontPadding="false"
                android:inputType="textPassword"
                android:textDirection="inherit"
                />

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/signUp_account_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/light_blue_background"
            android:layout_marginTop="20dp"
            android:enabled= "false"
            >

            <TextView
                android:id="@+id/signUp_account_btn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/light_gray"
                android:text="@string/sgin_up_text"
                android:textSize="20sp"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:layout_centerInParent="true"
                />
            <ProgressBar
                android:id="@+id/sgin_up_progress"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:theme="@style/CustomProgressBarStyle"
                android:indeterminate="false"
                android:visibility="gone"

                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/gray"
                android:text="@string/already_have_account_text"
                android:fontFamily="@font/poppins_light"
                android:includeFontPadding="false"
                />
            <TextView
                android:id="@+id/login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/deep_blue"
                android:text="@string/login_text"
                android:fontFamily="@font/poppins_semibold"
                android:includeFontPadding="false"
                android:layout_marginStart="5dp"
                />

        </LinearLayout>
    </LinearLayout>
        </LinearLayout>
</androidx.core.widget.NestedScrollView>
</RelativeLayout>