<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="vertical"
    >
<RelativeLayout
    android:id="@+id/messagesText_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    >
    <TextView
        android:id="@+id/recieverMessage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:maxWidth="170dp"
        android:visibility="gone"

        android:background="@drawable/light_blue_background"
        android:fontFamily="@font/poppins_medium"
        android:includeFontPadding="false"
        android:padding="10dp"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/senderMessage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        android:background="@drawable/deep_blue_background"
        android:padding="10dp"
        android:maxWidth="170dp"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        android:includeFontPadding="false"/>
</RelativeLayout>



    <RelativeLayout
        android:id="@+id/messagesImages_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/recieverMessage_Images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:maxWidth="170dp"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:visibility="gone"

            />
        <ImageView
            android:id="@+id/senderMessage_Images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:maxWidth="170dp"
            android:minWidth="40dp"
            android:minHeight="40dp"
             android:visibility="gone"

            />


    </RelativeLayout>






</LinearLayout>