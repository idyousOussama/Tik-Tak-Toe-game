<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/transparant_effect_background"
    >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/searchedUser_user_Image"
            android:layout_width="73dp"
            android:layout_height="68dp"
            android:src="@drawable/player_7" />

    <TextView
        android:id="@+id/searchedUser_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/searchedUser_user_Image"
        android:layout_toStartOf="@+id/cancel_and_follow_btns_layout"
        android:ellipsize="end"
        android:gravity="start"
        android:textAlignment="viewStart"
           android:fontFamily="@font/poppins"
    android:includeFontPadding="false"
    android:maxLines="1"
    android:text="oussajmzesfkljdmcvsdfdfdkjskjsdkljfdkjsdfkjsdma_idyous"
    android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/cancel_and_follow_btns_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            >
            <ImageView
                android:id="@+id/searchedUser_player_cancel_btn"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:padding="10dp"
                android:layout_marginEnd="7dp"
                android:src="@drawable/cancel"
                android:background="@drawable/circle_gray_backgroud"
                />
            <RelativeLayout
                android:id="@+id/searchedUser_follow_btn"
                android:layout_width="80dp"
                android:background="@drawable/deep_blue_effect_background"
                android:layout_height="30dp">
                <TextView
                    android:id="@+id/searchedUser_follow_btn_text"
                    android:layout_width="80dp"
                    android:layout_height="33dp"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    android:paddingEnd="7dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
                <ProgressBar
                    android:id="@+id/userItem_operation_progress"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:theme="@style/CustomProgressBarStyle"
                    android:visibility="gone"

                  />
            </RelativeLayout>

        </LinearLayout>



</RelativeLayout>
