<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/light_blue_bottom_sheet_background"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    android:orientation="vertical"
    >

    <View
        android:layout_width="70dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:background="@drawable/light_gray_btn_background"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:text="@string/select_language_text"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"

        android:gravity="left"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/poppins_semibold"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/languages_Rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/white_bottom_sheet_background"/>

</LinearLayout>